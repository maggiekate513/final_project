<div class="card mb-3">
  <h2 class="card-header h4">
    Ingredient #<%= ingredient.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Meal</dt>
      <dd>
        <% if @ingredient.meal.present? %>
          <%= link_to ingredient.meal, ingredient.meal %>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= ingredient.name %></dd>

      <dt>Category</dt>
      <dd>
        <% if @ingredient.category.present? %>
          <%= link_to ingredient.category, ingredient.category %>
        <% end %>
      </dd>

      <dt>Store</dt>
      <dd>
        <% if @ingredient.store.present? %>
          <%= link_to ingredient.store, ingredient.store %>
        <% end %>
      </dd>

      <dt>Cost</dt>
      <dd><%= ingredient.cost %></dd>

      <dt>Photo</dt>
      <dd>
        <%= cl_image_tag @ingredient.photo, class: "img-fluid" %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back ingredient, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_ingredient_url(ingredient), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to ingredient, method: :delete, data: { confirm: "Do you really want to delete this ingredient?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(ingredient.updated_at) %> ago
  </div>
</div>
