    <% if was_validated %>
      <% if store_was_invalid %>
        <% store_class << " is-invalid" %>
      <% else %>
        <% store_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :store_id %>
    <%= f.collection_select :store_id, GroceryStore.all, :id, :to_s, {}, class: "form-control" %>
