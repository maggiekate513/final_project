<% was_validated = ingredient.errors.any? %>

<%= form_with(model: ingredient, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for meal_id start -->
  <div class="form-group">
    <% meal_class = "form-control" %>
    <% meal_was_invalid = ingredient.errors.include?(:meal) %>

    <% if was_validated %>
      <% if meal_was_invalid %>
        <% meal_class << " is-invalid" %>
      <% else %>
        <% meal_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :meal_id %>
    <!-- Input for meal_id start -->
    <%= f.collection_select :meal_id, Meal.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for meal_id end -->
    <% if meal_was_invalid %>
      <% ingredient.errors.full_messages_for(:meal).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for meal_id end -->
  <!-- Label and input for name start -->
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = ingredient.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <!-- Input for name start -->
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <!-- Input for name end -->
    <% if name_was_invalid %>
      <% ingredient.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for name end -->
  <!-- Label and input for category_id start -->
  <div class="form-group">
    <% category_class = "form-control" %>
    <% category_was_invalid = ingredient.errors.include?(:category) %>

    <% if was_validated %>
      <% if category_was_invalid %>
        <% category_class << " is-invalid" %>
      <% else %>
        <% category_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :category_id %>
    <!-- Input for category_id start -->
    <%= f.number_field :category_id, class: category_class, placeholder: "Enter category" %>
    <!-- Input for category_id end -->
    <% if category_was_invalid %>
      <% ingredient.errors.full_messages_for(:category).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for category_id end -->
  <!-- Label and input for store_id start -->
  <div class="form-group">
    <% store_class = "form-control" %>
    <% store_was_invalid = ingredient.errors.include?(:store) %>

    <% if was_validated %>
      <% if store_was_invalid %>
        <% store_class << " is-invalid" %>
      <% else %>
        <% store_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :store_id %>
    <!-- Input for store_id start -->
    <%= f.number_field :store_id, class: store_class, placeholder: "Enter store" %>
    <!-- Input for store_id end -->
    <% if store_was_invalid %>
      <% ingredient.errors.full_messages_for(:store).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for store_id end -->
  <!-- Label and input for cost start -->
  <div class="form-group">
    <% cost_class = "form-control" %>
    <% cost_was_invalid = ingredient.errors.include?(:cost) %>

    <% if was_validated %>
      <% if cost_was_invalid %>
        <% cost_class << " is-invalid" %>
      <% else %>
        <% cost_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cost %>
    <!-- Input for cost start -->
    <%= f.text_field :cost, class: cost_class, placeholder: "Enter cost" %>
    <!-- Input for cost end -->
    <% if cost_was_invalid %>
      <% ingredient.errors.full_messages_for(:cost).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for cost end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
