<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ingredients

    <a data-toggle="collapse" href="#category_ingredients_new_form">
      Add ingredient
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.ingredients.each do |ingredient| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to ingredient, ingredient %>

        <%= link_to ingredient, method: :delete, data: { confirm: "Do you really want to delete this ingredient" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_ingredients_new_form">
        <%= render partial: "categories/category_ingredients_new_form" %>
      </div>
    </div>

  </ul>
</div>
