<%= form_with(model: @meal, local: true) do |f| %>

  <%= f.hidden_field :chef, value: @user.id %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo %>

    <%= f.file_field :photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :meal_name %>

    <%= f.text_field :meal_name, class: "form-control" %>
  </div>

  <%= f.submit "Create meal", class: "btn btn-block btn-outline-secondary" %>
<% end %>
