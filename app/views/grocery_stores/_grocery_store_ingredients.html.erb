<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ingredients

    <a data-toggle="collapse" href="#grocery_store_ingredients_new_form">
      Add ingredient
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @grocery_store.ingredients.each do |ingredient| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to ingredient, ingredient %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to ingredient, method: :delete, data: { confirm: "Do you really want to delete this ingredient" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="grocery_store_ingredients_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "grocery_stores/grocery_store_ingredients_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
