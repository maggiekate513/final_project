<% was_validated = meal.errors.any? %>

<%= form_with(model: meal, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for chef start -->
  <div class="form-group">
    <% chef_class = "form-control" %>
    <% chef_was_invalid = meal.errors.include?(:chef) %>

    <% if was_validated %>
      <% if chef_was_invalid %>
        <% chef_class << " is-invalid" %>
      <% else %>
        <% chef_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :chef %>
    <!-- Input for chef start -->
    <%= f.collection_select :chef, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for chef end -->
    <% if chef_was_invalid %>
      <% meal.errors.full_messages_for(:chef).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for chef end -->
  <!-- Label and input for description start -->
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = meal.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, class: description_class, placeholder: "Enter description" %>
    <!-- Input for description end -->
    <% if description_was_invalid %>
      <% meal.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for description end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
