<div class="card mb-3">
  <h2 class="card-header h4">
    Meal #<%= meal.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Chef</dt>
      <dd>
        <% if @meal.recipe_inventor.present? %>
          <%= link_to meal.recipe_inventor, meal.recipe_inventor %>
        <% end %>
      </dd>

      <dt>Description</dt>
      <dd><%= meal.description %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back meal, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @meal.recipe_inventor %>
          <%= link_to edit_meal_url(meal), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @meal.recipe_inventor %>
          <%= link_to meal, method: :delete, data: { confirm: "Do you really want to delete this meal?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(meal.updated_at) %> ago
  </div>
</div>
