<%= form_with(model: @ingredient, local: true) do |f| %>

  <%= f.hidden_field :meal_id, value: @meal.id %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>

    <%= f.collection_select :category_id, Category.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :store_id %>

    <%= f.collection_select :store_id, GroceryStore.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cost %>

    <%= f.text_field :cost, class: "form-control" %>
  </div>

  <%= f.submit "Create ingredient", class: "btn btn-block btn-outline-secondary" %>
<% end %>
